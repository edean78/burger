<div class="container">
    <div class="row">
        <div class="col-md-12" id="header-text">
            <h1>EAT-DA-BURGER</h1>
        </div>
        <div class="col-md-4" class="display-burgers">
            <div class="row">
                <ul>
                    {{#each burger}}
                        {{#unless this.devoured}}
                            <li>
                                {{this.id}}<span>.</span> {{this.burger_name}}

                            <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devour" value="true">
                                <button type="submit" class="btn btn-warning btn-sm">Devour!</button>
                            </form>
                            </li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-md-4" class="devour-burgers">
            <ul>
                {{#each burger}}
                    {{#if this.devoured}}
                        <li>
                            {{this.id}}<span>.</span> {{this.burger_name}}
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<br>
<div class="container">
    <div class="row">
        <div class="col-md-12 input-section">
            <form class="create-burger" action="/" method="POST">
                <input type="text" name="burgerName" class="form-control" value="" id="input_burger">
                <button type="submit" class="btn btn-primary" id="post-burger">Submit</button>
            </form>
            <p>Input your favorite burger you would like to devour</p>
        </div>
    </div>
</div>